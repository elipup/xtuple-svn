 <querysource>
  <name>head</name>
  <sql>SELECT &lt;? if exists(&quot;custtype_id&quot;) ?>
         (select (custtype_code||'-'||custtype_descrip)
            FROM custtype
           WHERE (custtype_id=&lt;? value(&quot;custtype_id&quot;) ?>) )
       &lt;? elseif exists(&quot;custtype_pattern&quot;) ?>
         text(&lt;? value(&quot;custtype_pattern&quot;) ?>)
       &lt;? else ?>
         text('All Customer Types')
       &lt;? endif ?>
       AS custtype ;    </sql>
 </querysource>
 <querysource>
  <name>detail</name>
  <sql>SELECT cust_number,
       cust_name,
       cust_address1,
       cust_address2,
       formatBoolYN(cust_active) as f_active
  FROM cust
WHERE (
&lt;? if exists(&quot;custtype_id&quot;) ?>
   (cust_custtype_id=&lt;? value(&quot;custtype_id&quot;) ?>)
&lt;? elseif exists(&quot;custtype_pattern&quot;) ?>
   (cust_custtype_id IN (SELECT custtype_id FROM custtype WHERE (custtype_code ~ &lt;? value(&quot;custtype_pattern&quot;) ?>)))
&lt;? else ?>
   (true)
&lt;? endif ?>
&lt;? if not exists(&quot;showInactive&quot;) ?>
   AND (cust_active)
&lt;? endif ?>
)
ORDER BY cust_number;</sql>
 </querysource>
