 <querysource>
  <name>detail</name>
  <sql>SELECT vend_number, vend_name,
       apopen_docnumber, apopen_doctype,
       formatDate(apopen_docdate) AS docdate,
       formatExtPrice(apopen_amount) AS openamount, apopen_invcnumber,
       CASE WHEN (accnt_id IS NULL) THEN ''
            ELSE (formatGLAccount(accnt_id) || ' - ' || accnt_descrip)
       END AS account,
       CASE WHEN (gltrans_amount &lt; 0) THEN formatExtPrice(ABS(gltrans_amount))
            ELSE ''
       END AS debit,
       CASE WHEN (gltrans_amount > 0) THEN formatExtPrice(gltrans_amount)
            ELSE ''
       END AS credit
FROM vend,
     apopen LEFT OUTER JOIN
     ( gltrans LEFT OUTER JOIN accnt
       ON (gltrans_accnt_id=accnt_id))
     ON ( (apopen_docnumber=gltrans_docnumber) AND (gltrans_source='A/P') )
WHERE ( (apopen_vend_id=vend_id)
 AND (gltrans_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>)
 AND (apopen_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>) )
ORDER BY apopen_docnumber, gltrans_amount, accnt_number;
    </sql>
 </querysource>
 <querysource>
  <name>distributions</name>
  <sql>SELECT 1 AS groupid, (formatGLAccount(accnt_id) || ' - ' || accnt_descrip) AS account,
         formatExtPrice(SUM(ABS(gltrans_amount))) AS debit,
         '' AS credit
FROM gltrans, accnt
WHERE ( (gltrans_accnt_id=accnt_id)
 AND (gltrans_amount &lt; 0)
 AND (gltrans_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>) )
GROUP BY account

UNION SELECT 1 AS groupid, (formatGLAccount(accnt_id) || ' - ' || accnt_descrip) AS account,
                           '' AS debit,
                           formatExtPrice(SUM(gltrans_amount)) AS credit
FROM gltrans, accnt
WHERE ( (gltrans_accnt_id=accnt_id)
 AND (gltrans_amount >= 0)
 AND (gltrans_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>) )
GROUP BY account; </sql>
 </querysource>
 <querysource>
  <name>totalpayables</name>
  <sql>SELECT formatExtPrice(SUM(COALESCE(apopen_amount, 0))) AS amount
FROM apopen
WHERE ( (apopen_doctype='V')
 AND (apopen_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>) );
    </sql>
 </querysource>
 <querysource>
  <name>totaldebit</name>
  <sql>SELECT formatExtPrice(SUM(ABS(gltrans_amount))) AS total
FROM gltrans
WHERE ( (gltrans_amount &lt; 0)
 AND (gltrans_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?>) );
    </sql>
 </querysource>
 <querysource>
  <name>totalcredit</name>
  <sql>SELECT formatExtPrice(SUM(gltrans_amount)) AS total
FROM gltrans
WHERE ( (gltrans_amount > 0)
 AND (gltrans_journalnumber=&lt;? value(&quot;journalNumber&quot;) ?> ) );
    </sql>
 </querysource>
 <querysource>
  <name>head</name>
  <sql>SELECT (jrnluse_use || TEXT(jrnluse_number)) AS f_number,
       formatDate(jrnluse_date) AS f_date
FROM jrnluse
WHERE ((jrnluse_use='AP-VO')
  AND (jrnluse_number=&lt;? value(&quot;journalNumber&quot;) ?>));
</sql>
 </querysource>
