 <querysource>
  <name>head</name>
  <sql>SELECT item_number,
       CASE WHEN(itemimage_purpose='I') THEN text('Inventory Description')
            WHEN(itemimage_purpose='P') THEN text('Product Description')
            WHEN(itemimage_purpose='E') THEN text('Engineering Reference')
            WHEN(itemimage_purpose='M') THEN text('Miscellaneous')
            ELSE itemimage_purpose
       END AS purpose,
       image_name,
       image_descrip,
       image_data
  FROM itemimage, item, image
 WHERE ((itemimage_item_id=item_id)
   AND  (itemimage_image_id=image_id)
   AND  (itemimage_id=&lt;? value("itemimage_id") ?>));</sql>
